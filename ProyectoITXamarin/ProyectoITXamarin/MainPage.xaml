             x:Class="ProyectoITXamarin.MainPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#143D6E" >
            <Image Source="https://i.ibb.co/JFRPLsM/Component-2.png"
                   Aspect="AspectFit"
                   Margin="0,30,0,0"
                   HeightRequest="500"
